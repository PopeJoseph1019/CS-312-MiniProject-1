<%- include('partials/header') %>

<div class="container">
    <header class="header">
        <h1>My Personal Blog</h1>
        <p>Share your thoughts and ideas with the world</p>
    </header>

    <section class="create-post">
        <h2>Create New Post</h2>
        <form action="/posts" method="POST">
            <div class="form-group">
                <label for="author">Your Name:</label>
                <input type="text" id="author" name="author" class="form-control" required 
                       placeholder="Enter your name">
            </div>
            
            <div class="form-group">
                <label for="title">Post Title:</label>
                <input type="text" id="title" name="title" class="form-control" required 
                       placeholder="Enter an engaging title">
            </div>
            
            <div class="form-group">
                <label for="content">Content:</label>
                <textarea id="content" name="content" class="form-control" required 
                          placeholder="Share your thoughts, experiences, or ideas..."></textarea>
            </div>
            
            <button type="submit" class="btn">Publish Post</button>
        </form>
    </section>

    <section class="posts-section">
        <h2>Recent Posts</h2>
        
        <% if (posts.length > 0) { %>
            <div class="posts-grid">
                <% posts.forEach(post => { %>
                    <article class="post-card">
                        <h3 class="post-title"><%= post.title %></h3>
                        <div class="post-meta">
                            <span>By <%= post.author %></span>
                            <span><%= post.formattedDate %></span>
                        </div>
                        <div class="post-content">
                            <%= post.content.length > 200 ? post.content.substring(0, 200) + '...' : post.content %>
                        </div>
                        <div class="post-actions">
                            <a href="/edit/<%= post.id %>" class="btn btn-secondary btn-small">‚úèÔ∏è Edit</a>
                            <form action="/delete/<%= post.id %>" method="POST" style="display: inline;" 
                                  onsubmit="return confirm('Are you sure you want to delete this post?')">
                                <button type="submit" class="btn btn-danger btn-small">üóëÔ∏è Delete</button>
                            </form>
                        </div>
                    </article>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <h3>No posts yet!</h3>
                <p>Be the first to share something amazing. Create your first blog post above!</p>
            </div>
        <% } %>
    </section>
</div>

<%- include('partials/footer') %>