<%- include('partials/header', { title: 'Edit Post - My Blog' }) %>

<div class="edit-container">
    <form class="edit-form" action="/edit/<%= post.id %>" method="POST">
        <h1>Edit Post</h1>
        
        <div class="form-group">
            <label for="author">Author Name:</label>
            <input type="text" id="author" name="author" class="form-control" 
                   value="<%= post.author %>" required>
        </div>
        
        <div class="form-group">
            <label for="title">Post Title:</label>
            <input type="text" id="title" name="title" class="form-control" 
                   value="<%= post.title %>" required>
        </div>
        
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="content" class="form-control" required><%= post.content %></textarea>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn">Update Post</button>
            <a href="/" class="btn btn-secondary">â†©Cancel</a>
        </div>
    </form>
</div>

<%- include('partials/footer') %>